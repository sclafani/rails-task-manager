<h1>Tasks</h1>
<%= link_to "new task", new_task_path %>
<ul>
  <% @tasks.each do |task| %>
    <li>
      <%= link_to task.name, task_path(task) %>
      <%= "#{task.completed ? '' : 'not'} completed" %>
      <%= link_to "Edit", edit_task_path(task) %>
      <%= link_to "Delete", task_path(task),
            method: :delete,
            data: {confirm: "Are you sure?" } %>
    </li>
  <% end %>
</ul>
